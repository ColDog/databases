<h1>Admin add user to course</h1>
<p>This page will add a user to a course by their id.</p>

<div class="row">
	<div class="col-md-8">
		<div class="well">
			<div class="row">
				<div class="col-md-6 col-sm-6">
					<h4><%= @user.name unless @user.nil? %></h4>
					<p><%= "ID: #{@user.id} | Age: #{@user.age} | Email: #{@user.email}" unless @user.nil? %></p>
				</div>
				<div class="col-md-6 col-sm-6">
					<h4><%= @course.title unless @course.nil? %></h4>
					<p><%= "ID: #{@course.id} | Size: #{@course.class_lists.count} / #{@course.size} | Dates: #{@course.dates}" unless @course.nil? %></p>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<%= form_for(:class_list, url: admin_class_path) do |f| %>
			<%= f.hidden_field :course_id, value: params[:course_id] %>
			<%= f.hidden_field :user_id, value: params[:user_id] %>
			<%= f.submit 'Add User to Class', class: 'btn btn-primary' %>
		<% end %>
		<hr>
		<%= form_for(:wait_list, url: admin_wait_path) do |f| %>
				<%= f.hidden_field :course_id, value: params[:course_id] %>
				<%= f.hidden_field :user_id, value: params[:user_id] %>
			<%= f.submit 'Add User to Wait List', class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>

<hr>

<%= render 'shared/admin/search' %>

