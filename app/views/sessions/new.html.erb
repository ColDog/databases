<h1>Log In</h1>

<p>Admin user sample email: email: 'admin@admin.com' password: 'password'</p>
<p>Random user sample email: email: 'test@test.com' password: 'password'</p>

<%= form_for(:session, url: login_path) do |f| %>

	<%= f.label :email %>
	<%= f.email_field :email, class: 'form-control' %>

	<%= f.label :password %>
	<%= f.password_field :password, class: 'form-control' %>

	<%= f.submit 'Log In', class: 'btn' %>
<% end %>
<hr>
<p>New user? <%= link_to 'Sign up now!', signup_path %></p>
<p>Forgot Password? <%= link_to 'Reset Password', new_password_reset_path %></p>
